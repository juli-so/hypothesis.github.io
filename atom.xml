<?xml version="1.0"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>{{ site.title | xml_escpae }}</title>
  <link href="http://{{ site.host }}{{ site.baseurl }}"/>
  <link type="application/atom+xml" rel="self" href="{{ page.url }}"/>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>{{ site.host }}{{ site.baseurl }}</id>
  <author>
    <name>{{ site.author }}</name>
    <email>{{ site.email }}</email>
  </author>

  {% for post in site.posts %}
  <entry>
    <id>{{ site.host }}{{ site.basurl }}{{ post.id }}</id>
    <link type="text/html" rel="alternate" href="http://{{ site.host }}{{ site.baseurl }}{{ post.url }}"/>
    <title>{{ post.title | xml_escape }}</title>
    <published>{{ post.date | date_to_xmlschema }}</published>
    <updated>{{ post.date | date_to_xmlschema }}</updated>
    <author>
      <name>{{ post.author }}</name>
      <uri>http://{{ site.host }}{{ site.baseurl }}/team/{{ post.author }}</uri>
    </author>
    <content type="html">{{ post.content | xml_escape }}</content>
  </entry>
  {% endfor %}
</feed>
